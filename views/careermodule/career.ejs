<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Career page</title>

    <script src="https://kit.fontawesome.com/2635296004.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/BottomNavmodule/bottomnavbar.css">
    <!-- <link rel="stylesheet" href="/css/Profilemodule/profile.css">  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Careermodule/career.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>

    <!-- Custom js -->
    <!-- <script src="/js/Clashmodule/clash.js"></script> -->

</head>

<body>

    <div class="head">
        <div id="backdiv">
            <i onclick="window.location.href='/links'" id="back" class="fas fa-arrow-left"></i>
        </div>

        <div id="headdiv">
            <p id="heading">Career</p>
        </div>
    </div>

    <div class="container" style="margin-top: 5em; margin-bottom: 5em;">
        <div class="row">
            <div class="col-6">
                <div class="desktop-view-left" style="margin-top: 30px;">
                    <div class="row my-2">
                        <div>
                            <p class="p1">Name</p>
                            <h6>Jane Cooper</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">City</p>
                            <h6>New York, USA</h6>
                        </div>
                    </div>
                    <div class="row mobile-view">
                        <div>
                            <p class="p1">Posts</p>
                            <h6>18</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">Followers</p>
                            <h6>54</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">Duration of video uploaded</p>
                            <h6>32m 37s</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">Clashes Created</p>
                            <h6>18</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">Total time on HappyClash</p>
                            <h6>6h 8m 3s</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">Total Comments</p>
                            <h6>43</h6>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div>
                            <p class="p1">Highest rank</p>
                            <h6>#3</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="row profile">
                    <img src="/img/profile3.png" alt="Profile">
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Total Clash wins</p>
                        <h6>3</h6>
                    </div>
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Following</p>
                        <h6>34</h6>
                    </div>
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Clashs Participated in</p>
                        <h6>3</h6>
                    </div>
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Most views on a post</p>
                        <h6>3</h6>
                    </div>
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Time with HappyClash</p>
                        <h6>1y 3m 4d 19h</h6>
                    </div>
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Total views</p>
                        <h6>57k</h6>
                    </div>
                </div>
                <div class="row my-2">
                    <div>
                        <p class="p1">Mentions</p>
                        <h6>25</h6>
                    </div>
                </div>
            </div>
            <div class="row my-2 desktop-bottom">
                <div>
                    <p class="p1">Most number of participants in your clash</p>
                    <h6>27</h6>
                </div>
            </div>
        </div>
    </div>
    <%- include("../BottomNavmodule/bottomnavbar") %>
</body>

</html>