    <div class="feedhomepage">
      <div class="container" style="margin-top: 10px; margin-bottom: 10px">
        <div class="row">
          <div class="col-3 jcc hcl-circle" style="padding: 5px 15px 0 15px !important;">
            <img src="/img/hcl-logo.png" />
          </div>
          <div class="col-6 jcc" id="happy-logo">
            <img src="/img/homefeed-logo.png" />
          </div>
          <div class="col-3 jcc user-image" style="padding: 5px 15px 0 15px !important;">
