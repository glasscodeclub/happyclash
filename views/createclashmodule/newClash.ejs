  <div class="head">
    <div id="backdiv">
      <span onclick="window.location.href='/clashDetails'" class="iconify" data-inline="false" data-icon="eva:arrow-back-outline" style="font-size: 30px;"></span>

    </div>

    <div id="headdiv">
      <p id="heading">Create a New Clash</p>
    </div>
  </div>

  <div class="upload">
    <button type="button" class="uploadButton" value=""  data-target=".upload-popup" onclick="window.location.href='/library'"">
      Upload
    </button>
  </div>

  <div id="typeOfClash">
    <div id="typeOfClashBox">
      <div class="form-check public">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="public-clash" value="Public" checked>
        <label class="form-check-label" for="public-clash">
          Public Clash
        </label>
      </div>
      <div class="form-check friend">
        <input class="form-check-input" type="radio" name="flexRadioDefault" value="Friend" id="friends-clash">
        <label class="form-check-label" for="friends-clash">
          Friends Clash
        </label>
      </div>
    </div>
  </div>

  <div id="form-div">
    <form class="createClashForm">
      <div class="form-group">
        <input type="text" class="form-control clash-title" placeholder="Clash Title" required>
      </div>
      <div class="form-group">
        <textarea class="form-control clash-des" rows="3" placeholder="Enter Clash Description" required></textarea>
      </div>
      <div class="form-group md-form">
          <input placeholder="Clash Ends" onfocus="(this.type='date')" type="text" class="form-control  clash-endTime" required>
      </div>
      <div class="form-group">
        <select class="form-control" id="exampleFormControlSelect1" required>
          <option selected>Category</option>
          <option>Acting</option>
          <option>Acrobats</option>
          <option>Comedy</option>
          <option>Dance</option>
          <option>Drama</option>
          <option>Music</option>
        </select>
      </div>
      <div class="form-group">
        <input type="text" class="form-control clash-keys" placeholder="Keywords" required>
      </div>
      <div class="form-group submit-buttons">
        <button id="start" class="btn btn-primary sub save">Start Clash</button>
        <button id="continue" class="btn btn-primary sub save">Continue</button>
      </div>
    </form>
  </div>

