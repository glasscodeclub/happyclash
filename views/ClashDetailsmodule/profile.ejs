<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Profile page</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto" rel="stylesheet">
    <script src="https://kit.fontawesome.com/2635296004.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/BottomNavmodule/bottomnavbar.css">
    <!-- <link rel="stylesheet" href="/css/Profilemodule/profile.css">  -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/ClashDetailsmodule/profile.css">
</head>

<body>
    <div class="container" style="margin-bottom: 5em !important;">
        <div id="backdiv">
            <img onclick="window.location.href='/links'" id="back" style="width: 20px; cursor: pointer;"
                src="/img/backarrow.png" alt="back">
        </div>
        <center>
            <img src="<%= userDetails.profilePic %>" alt="profile">
            <h2><%= userDetails.name ? userDetails.name : 'null' %></h2>
            <p id="username"><%= userDetails.username %></p>
            <p><%= userDetails.city ? userDetails.city : 'null' %></p>
            <button onclick="follow(this)"><%= isFollowed ? "Unfollow" : "Follow" %> </button>
        </center>
        <br>
        <div class="container" style="margin-bottom: 10px; margin-top:5px;">
            <div class="row">
                <div class="col" style="padding:0px !important;">
                    <h6 class="rp2" id="follower"><%= userDetails.followers.length %></h6>
                    <p class="rp1">Followers</p>
                </div>
                <div class="col" style="padding:0px !important;">
                    <h6 class="rp2" id="following"><%= userDetails.following.length %></h6>
                    <p class="rp1">Following</p>
                </div>
                <div class="col" style="padding:0px !important;">
                    <h6 class="rp2"><%= videosArray.length %></h6>
                    <p class="rp1">Videos</p>
                </div>
                <div class="col" style="padding:0px !important;">
                    <h6 class="rp2"><%= userDetails.wonClashes.length %></h6>
                    <p class="rp1">Clash Won</p>
                </div>
            </div>
        </div>
        <br>
        <div class="container">
            <div class="row comment-header">
                <div class="col d-flex justify-content-start align-items-center">
                    <p style="margin-bottom: 0;">Posts</p>
                </div>
                <div class="col d-flex justify-content-end align-items-center">
                    <a href="/career/post?page=1&size=10&username=<%= userDetails.username %>" onclick="seeAllPosts(this)">See All&nbsp;&nbsp;<i class="fas fa-angle-right"></i> </a>
                </div>
            </div>
        </div>
        <br>
        <div class="container">
            <div class="row">
                <% videosArray.forEach(video => { %>
                    <div class="col d-flex justify-content-center mb-3">
                        <video width="400px" height="400px" muted autoplay loop onclick="playVideo(this)">
                            <source src="/video/<%= video._id %>" type="video/mp4">
                        </video>
                        <div class="overlay d-flex justify-content-between flex-column">
                            <div class="d-flex justify-content-between">
                                <p>Rank 3/40</p>
                                <p>1:20</p>
                            </div>
                            <div>
                                <p>2h ago</p>
                                <h2 class="mb-0">Dance Challenge</h2>
                                <p>Started by Wade Warren</p>
                                <div class="d-flex justify-content-around mt-3">
                                    <p><%= video.likes.length %> Likes</p>
                                    <p><%= video.dislikes.length %> Comments</p>
                                    <p>40 Participants</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %> 
            </div>
        </div>
    </div>

    <%- include("../BottomNavmodule/bottomnavbar") %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
        integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
        </script>
    <script src="/js/ClashDetailsmodule/profile.js"></script>
</body>

</html>